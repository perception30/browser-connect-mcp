{
  "name": "browser-connect-mcp",
  "version": "0.1.0",
  "description": "MCP server for browser DevTools integration - debug console logs and network requests with AI assistance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "browser",
    "devtools",
    "debugging",
    "chrome-devtools-protocol",
    "ai-debugging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chrome-remote-interface": "^0.33.0",
    "puppeteer-core": "^21.7.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/chrome-remote-interface": "^0.31.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}